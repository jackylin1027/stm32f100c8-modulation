//! @brief 'Cause the interval of basic timer is 1/16 second,we need to define every 4 units as one quarter second.
#define   BTC_QUARTER_UINT    4
//! @brief 'Cause the interval of basic timer is 1/16 second,we need to define every 2 quarter seconds as one half second.
#define   BTC_HALF_UNIT       (BTC_QUARTER_UINT<<1)
//! @brief 'Cause the interval of basic timer is 1/16 second,we need to define every 2 half seconds as one second.
#define   BTC_SEC_UNIT        (BTC_HALF_UNIT<<1)
//! @brief KEY TASK TIMING
#define   BTC_KEY_UNIT        (BTC_QUARTER_UINT>>1)
